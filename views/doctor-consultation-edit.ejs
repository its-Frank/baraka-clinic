<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Consultation - Baraka Clinic</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <div class="flex flex-col md:flex-row flex-1">
      <!-- Sidebar -->
      <%- include('partials/sidebar') %>

      <!-- Content -->
      <div class="flex-1 p-4 md:p-6">
        <div class="mb-6">
          <h1 class="text-2xl font-bold text-gray-800">Edit Consultation</h1>
          <p class="text-gray-600">
            Patient: <%= patient.first_name %> <%= patient.last_name %>
          </p>
        </div>

        <!-- Flash Messages -->
        <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div
          class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
          role="alert"
        >
          <span class="block sm:inline"><%= success_msg %></span>
        </div>
        <% } %> <% if(typeof error_msg !== 'undefined' && error_msg.length > 0)
        { %>
        <div
          class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
          role="alert"
        >
          <span class="block sm:inline"><%= error_msg %></span>
        </div>
        <% } %>

        <div class="bg-white rounded-lg shadow-md p-6">
          <form
            action="/doctor/consultations/edit/<%= consultation.id %>"
            method="POST"
            class="space-y-6"
          >
            <div>
              <label
                for="symptoms"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Symptoms *
              </label>
              <textarea
                id="symptoms"
                name="symptoms"
                rows="4"
                class="shadow-sm focus:ring-teal-500 focus:border-teal-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2"
                placeholder="Describe the patient's symptoms"
                required
              >
<%= consultation.symptoms %></textarea
              >
            </div>

            <div>
              <label
                for="diagnosis"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Diagnosis
              </label>
              <textarea
                id="diagnosis"
                name="diagnosis"
                rows="3"
                class="shadow-sm focus:ring-teal-500 focus:border-teal-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2"
                placeholder="Enter your diagnosis"
              >
<%= consultation.diagnosis %></textarea
              >
            </div>

            <div>
              <label
                for="treatment"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Treatment
              </label>
              <textarea
                id="treatment"
                name="treatment"
                rows="3"
                class="shadow-sm focus:ring-teal-500 focus:border-teal-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2"
                placeholder="Describe the treatment plan"
              >
<%= consultation.treatment %></textarea
              >
            </div>

            <div>
              <label
                for="notes"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Additional Notes
              </label>
              <textarea
                id="notes"
                name="notes"
                rows="2"
                class="shadow-sm focus:ring-teal-500 focus:border-teal-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2"
                placeholder="Any additional notes"
              >
<%= consultation.notes %></textarea
              >
            </div>

            <div class="flex items-center">
              <input
                id="complete_consultation"
                name="complete_consultation"
                type="checkbox"
                class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded"
              />
              <label
                for="complete_consultation"
                class="ml-2 block text-sm text-gray-900"
              >
                Mark consultation as completed
              </label>
            </div>

            <div class="flex justify-between">
              <a
                href="/doctor/consultations/<%= consultation.id %>"
                class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md"
              >
                Cancel
              </a>
              <div class="flex space-x-2">
                <button
                  type="submit"
                  class="bg-teal-600 hover:bg-teal-700 text-white font-medium py-2 px-4 rounded-md"
                >
                  Save Changes
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script>
      // Mobile menu toggle
      document.addEventListener("DOMContentLoaded", function () {
        const sidebar = document.querySelector(".sidebar");
        const menuToggle = document.getElementById("menu-toggle");

        if (menuToggle) {
          menuToggle.addEventListener("click", function () {
            sidebar.classList.toggle("-translate-x-full");
          });
        }
      });
    </script>
  </body>
</html>
