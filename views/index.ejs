    </footer>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener("click", function () {
            mobileMenu.classList.toggle("hidden");
          });
        }

        // Hero section login dropdown toggle
        const loginDropdownBtn = document.getElementById("login-dropdown-btn");
        const loginDropdown = document.getElementById("login-dropdown");
        const dropdownArrow = document.getElementById("dropdown-arrow");

        if (loginDropdownBtn && loginDropdown) {
          let isDropdownOpen = false;

          loginDropdownBtn.addEventListener("click", function () {
            isDropdownOpen = !isDropdownOpen;
            if (isDropdownOpen) {
              loginDropdown.classList.remove("hidden");
              dropdownArrow.classList.add("rotate-180");
            } else {
              loginDropdown.classList.add("hidden");
              dropdownArrow.classList.remove("rotate-180");
            }
          });

          // Close dropdown when clicking outside
          document.addEventListener("click", function (event) {
            if (
              isDropdownOpen &&
              !loginDropdownBtn.contains(event.target) &&
              !loginDropdown.contains(event.target)
            ) {
              loginDropdown.classList.add("hidden");
              dropdownArrow.classList.remove("rotate-180");
              isDropdownOpen = false;
            }
          });
        }

        // Navigation bar login dropdown toggle
        const navLoginDropdownBtn = document.getElementById(
          "nav-login-dropdown-btn"
        );
        const navLoginDropdown = document.getElementById("nav-login-dropdown");
        const navDropdownArrow = document.getElementById("nav-dropdown-arrow");

        if (navLoginDropdownBtn && navLoginDropdown) {
          let isNavDropdownOpen = false;

          navLoginDropdownBtn.addEventListener("click", function () {
            isNavDropdownOpen = !isNavDropdownOpen;
            if (isNavDropdownOpen) {
              navLoginDropdown.classList.remove("hidden");
              navDropdownArrow.classList.add("rotate-180");
            } else {
              navLoginDropdown.classList.add("hidden");
              navDropdownArrow.classList.remove("rotate-180");
            }
          });

          // Close dropdown when clicking outside
          document.addEventListener("click", function (event) {
            if (
              isNavDropdownOpen &&
              !navLoginDropdownBtn.contains(event.target) &&
              !navLoginDropdown.contains(event.target)
            ) {
              navLoginDropdown.classList.add("hidden");
              navDropdownArrow.classList.remove("rotate-180");
              isNavDropdownOpen = false;
            }
          });
        }
      });
    </script>
  </body>
</html>
